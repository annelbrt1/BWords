<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Button background color -->
    <solid android:color="#DCECC8"/>

    <!-- Border -->
    <stroke
        android:width="2dp"
        android:color="#000000"/>

    <!-- Square corners -->
    <corners android:radius="0dp"/>

    <!-- Inner padding -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp"/>
</shape>