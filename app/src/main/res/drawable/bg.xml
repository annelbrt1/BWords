<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="#E0E8C5"/>   <!-- light greenish -->

    <!-- Border -->
    <stroke
        android:width="2dp"
        android:color="#8B4513"/>   <!-- brown border -->

    <!-- Rounded corners -->
    <corners android:radius="6dp"/>

    <!-- Optional padding inside -->
    <padding
        android:left="8dp"
        android:top="6dp"
        android:right="8dp"
        android:bottom="6dp"/>
</shape>
