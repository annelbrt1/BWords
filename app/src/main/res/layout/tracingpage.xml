<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFDEB"
    android:orientation="horizontal"
    android:padding="16dp">

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/image_1"
    android:background="@android:color/transparent"
    android:contentDescription="Back"
    android:layout_alignParentStart="true"
    android:layout_marginTop="8dp" />

    <!-- Title -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="TRACE THE LETTER"
        android:textColor="#1D4E89"
        android:textSize="24sp"
        android:textStyle="bold"
        android:fontFamily="@font/centurygothic_bold"
        android:layout_marginTop="8dp"/>

    <!-- Target Letter (top right corner) -->

    <!-- Tracing Letter (center) -->
    <TextView
        android:id="@+id/target_letter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="70dp"
        android:fontFamily="@font/centurygothic_bold"
        android:text="a"
        android:textColor="#000000"
        android:textSize="100sp" />

    <ImageView
        android:id="@+id/trace_letter"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerInParent="true"
        android:src="@drawable/trace_letter"
        app:srcCompat="@drawable/trace_letter"
    android:contentDescription="Letter tracing" />

    <!-- Done Button -->
    <Button
        android:id="@+id/btnDone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="24dp"
        android:text="DONE TRACING"
        android:textColor="#FFFFFF"
        android:backgroundTint="#1D4E89"
        android:fontFamily="@font/centurygothic_bold"/>
</RelativeLayout>
