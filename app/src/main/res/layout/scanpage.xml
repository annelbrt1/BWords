<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFDEB">

    <!-- Sidebar -->
    <LinearLayout
        android:id="@+id/sidebar"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:background="#E6E6E6"
        android:orientation="vertical"
        android:padding="8dp"
        android:gravity="center_horizontal">

        <!-- Menu Icon -->
        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginBottom="24dp"
            android:contentDescription="Menu"
            android:src="@drawable/burger"
            app:srcCompat="@drawable/burger" />

        <!-- Icon Buttons -->
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="16dp"
            android:contentDescription="Word"
            android:src="@drawable/write"
            app:srcCompat="@drawable/write" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="16dp"
            android:contentDescription="Reading"
            android:src="@drawable/scan"
            app:srcCompat="@drawable/scan" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="16dp"
            android:contentDescription="Activity"
            android:src="@drawable/read"
            app:srcCompat="@drawable/read" />

        <!-- Bottom Settings -->
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/wbank" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="bottom|center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="20dp"
                android:id="@+id/imageView2"
                app:srcCompat="@drawable/user" />

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="20dp"
                android:contentDescription="Settings"
                android:src="@drawable/setting"
                app:srcCompat="@drawable/setting" />

        </LinearLayout>
    </LinearLayout>

    <!-- Header -->
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/sidebar"
        android:padding="16dp">

        <TextView
            android:id="@+id/scan_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SCAN WITH ME"
            android:textColor="#B71C1C"
            android:textSize="22sp"
            android:textStyle="bold"
            android:fontFamily="@font/centurygothic_bold"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/welcome_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WELCOME, SPROUT!"
            android:textColor="#1B5E20"
            android:textSize="16sp"
            android:fontFamily="@font/centurygothic_bold"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <!-- Main Card -->
    <LinearLayout
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:layout_toEndOf="@id/sidebar"
        android:layout_margin="24dp"
        android:background="#F5F5DC"
        android:orientation="vertical"
        android:padding="24dp"
        android:elevation="4dp">

        <!-- Camera Icon -->
        <ImageView
            android:id="@+id/camera_icon"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:src="@drawable/cam"
            app:srcCompat="@drawable/cam" />

        <!-- Instruction Text -->
        <TextView
            android:id="@+id/instruction_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Scan a word or letter, and a tracing activity will appear where you can practice writing! Give it a try!"
            android:textSize="16sp"
            android:textColor="#1D4E89"
            android:gravity="center"
            android:fontFamily="@font/centurygothic"
            android:layout_marginBottom="20dp"/>

        <!-- Scan Button -->
        <Button
            android:id="@+id/scan_button"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="SCAN"
            android:backgroundTint="#B71C1C"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"
            android:fontFamily="@font/centurygothic_bold"/>
    </LinearLayout>

</RelativeLayout>
